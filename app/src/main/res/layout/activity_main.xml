<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:text="DASHBOARD SMART CONTROL"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_view"
            android:columnCount="1"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <GridLayout
                    android:id="@+id/GridLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="193sp"
                    android:columnCount="3"
                    android:orientation="vertical"
                    android:paddingHorizontal="10sp"
                    android:rowCount="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="5sp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.github.lzyzsd.circleprogress.ArcProgress
                            android:id="@+id/progress1"
                            android:layout_width="90dp"
                            android:layout_height="75dp"
                            android:padding="0sp"
                            app:arc_bottom_text_size="13sp"
                            app:arc_finished_color="#0066FF"
                            app:arc_progress="55"
                            app:arc_suffix_text="Â°C"
                            app:arc_suffix_text_size="13sp"
                            app:arc_text_size="30sp"
                            app:arc_unfinished_color="#E4D8D8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEMPERATURE"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <com.github.lzyzsd.circleprogress.ArcProgress
                            android:id="@+id/progress4"
                            android:layout_width="90dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="9sp"
                            android:padding="0sp"
                            app:arc_bottom_text_size="13sp"
                            app:arc_finished_color="#0066FF"
                            app:arc_progress="55"
                            app:arc_suffix_text="%"
                            app:arc_suffix_text_padding="0sp"
                            app:arc_suffix_text_size="13sp"
                            app:arc_text_size="30sp"
                            app:arc_unfinished_color="#E4D8D8" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MOISTURE"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BATTERY"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.github.lzyzsd.circleprogress.ArcProgress
                            android:id="@+id/progress2"
                            android:layout_width="139dp"
                            android:layout_height="139dp"
                            android:layout_marginHorizontal="24sp"
                            android:layout_marginBottom="5sp"
                            android:padding="0sp"
                            app:arc_bottom_text_size="13sp"
                            app:arc_finished_color="#0066FF"
                            app:arc_progress="55"
                            app:arc_suffix_text="%"
                            app:arc_suffix_text_padding="0sp"
                            app:arc_suffix_text_size="20sp"
                            app:arc_text_size="35sp"
                            app:arc_unfinished_color="#E4D8D8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEVEL"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.github.lzyzsd.circleprogress.ArcProgress
                            android:id="@+id/progress3"
                            android:layout_width="90dp"
                            android:layout_height="75dp"
                            android:padding="0sp"
                            app:arc_bottom_text_size="13sp"
                            app:arc_finished_color="#0066FF"
                            app:arc_progress="55"
                            app:arc_suffix_text="%"
                            app:arc_suffix_text_padding="0sp"
                            app:arc_suffix_text_size="13sp"
                            app:arc_text_size="30sp"
                            app:arc_unfinished_color="#E4D8D8" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIGHT LEVEL"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <com.github.lzyzsd.circleprogress.ArcProgress
                            android:id="@+id/progress5"
                            android:layout_width="90dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="9sp"
                            android:padding="0sp"
                            app:arc_bottom_text_size="13sp"
                            app:arc_finished_color="#0066FF"
                            app:arc_progress="55"
                            app:arc_suffix_text="%"
                            app:arc_suffix_text_padding="0sp"
                            app:arc_suffix_text_size="13sp"
                            app:arc_text_size="30sp"
                            app:arc_unfinished_color="#E4D8D8" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIGHT LEVEL"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </GridLayout>
                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginHorizontal="30dp"
                    android:text="connection"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <GridLayout
                    android:id="@+id/GridLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="4"
                    android:orientation="vertical"
                    android:rowCount="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_fan"
                            android:layout_width="133sp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star_128" />
                        <TextView
                            android:id="@+id/fan_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperature"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="21dp"
                            android:text="State"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speed"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/fan_speed_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto mode"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                            <ToggleButton
                                android:id="@+id/fan_mode"
                                android:layout_margin="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ToggleButton" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/fan_toggle"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-black"
                            android:text="Toggle"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/fan_loading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="true"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">
                            <SeekBar
                                android:id="@+id/fan_speed"
                                android:layout_width="177dp"
                                android:layout_height="130dp"
                                android:layout_alignParentBottom="true"
                                android:padding="0dp"
                                android:progress="100"
                                android:paddingStart="17dp"
                                android:paddingEnd="17dp"
                                android:progressDrawable="@drawable/bg_custom_seekbar"
                                android:rotation="270"
                                android:splitTrack="false"
                                android:thumb="@drawable/ic_thumb" />
                        </LinearLayout>

                    </RelativeLayout>

                </GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <GridLayout
                    android:id="@+id/GridLayout2"
                    android:layout_width="402dp"
                    android:layout_height="204dp"
                    android:columnCount="5"
                    android:orientation="vertical"
                    android:rowCount="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="4sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="light 1"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/led1"
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            android:src="@drawable/ledoff" />

                        <ToggleButton
                            android:id="@+id/ledState1"
                            android:layout_width="61sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16sp"
                            android:text="ToggleButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="4sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light 2"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/led2"
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            android:src="@drawable/ledoff" />

                        <ToggleButton
                            android:id="@+id/ledState2"
                            android:layout_width="61sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16sp"
                            android:text="ToggleButton" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="4sp"
                        android:gravity="center"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light 3"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/led3"
                            android:layout_width="60sp"
                            android:layout_height="100sp"
                            android:src="@drawable/ledoff" />

                        <ToggleButton
                            android:id="@+id/ledState3"
                            android:layout_width="61sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16sp"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="37sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto mode"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <ToggleButton
                                android:id="@+id/led_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ToggleButton" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/led_level_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="25sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/land_loading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:indeterminate="true"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center"
                            android:orientation="vertical">

                            <SeekBar
                                android:id="@+id/led_level"
                                android:layout_width="177dp"
                                android:layout_height="130dp"
                                android:layout_alignParentBottom="true"
                                android:padding="0dp"
                                android:paddingStart="17dp"
                                android:paddingEnd="17dp"
                                android:progress="100"
                                android:progressDrawable="@drawable/bg_custom_seekbar"
                                android:rotation="270"
                                android:splitTrack="false"
                                android:thumb="@drawable/ic_thumb" />
                        </LinearLayout>

                    </RelativeLayout>

                </GridLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="fill"
                app:cardCornerRadius="8dp"
                app:cardElevation="7dp"
                app:cardUseCompatPadding="true">

                <GridLayout
                    android:id="@+id/GridLayout3"
                    android:layout_width="402dp"
                    android:layout_height="204dp"
                    android:columnCount="3"
                    android:orientation="vertical"
                    android:rowCount="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginStart="5sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main door"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/door"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:src="@drawable/doorclose" />
                        <ToggleButton
                            android:id="@+id/doorState"
                            android:layout_width="61sp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16sp"
                            android:text="ToggleButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Door state"
                                android:textAlignment="center"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <ToggleButton
                                android:id="@+id/door_state"
                                android:layout_width="70sp"
                                android:layout_height="wrap_content"
                                android:text="ToggleButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto mode"
                            android:textAlignment="center"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <ToggleButton
                            android:id="@+id/door_mode"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                </GridLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>
    </RelativeLayout>

</ScrollView>